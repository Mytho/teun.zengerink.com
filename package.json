{
  "name": "teun.zengerink.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build && next export",
    "dev": "next dev",
    "fix": "yarn lint --fix",
    "lint:ts": "eslint src/**/*.{ts,tsx}",
    "lint:types": "tsc --noEmit",
    "lint": "yarn lint:ts && yarn lint:types",
    "postinstall": "husky install",
    "start": "next start",
    "test:ci": "yarn lint && jest --ci",
    "test:cov": "jest --ci --collectCoverage",
    "test:smoke": "export $(grep -v '^#' .env | xargs) && curl -v --silent $NEXT_PUBLIC_PROTO://$NEXT_PUBLIC_HOST/ 2>&1 | grep -q $(git rev-parse HEAD)",
    "test": "jest --watch"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "next": "^10.2.3",
    "next-build-id": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.2",
    "sass": "^1.34.1",
    "sharp": "^0.28.3",
    "slugify": "^1.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/react": "^11.2.7",
    "@types/image-size": "^0.8.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.9.0",
    "@types/react": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  }
}
